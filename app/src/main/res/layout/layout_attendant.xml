<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/listAttend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_gray"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/attendAvatarImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                tools:src="@tools:sample/avatars"
                />

            <TextView
                android:id="@+id/attendUsernameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/attendAvatarImageView"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Rayhan"
                style="@style/subHeaderText"
                />

            <TextView
                android:id="@+id/attendMatricNumberTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/attendUsernameTextView"
                app:layout_constraintStart_toEndOf="@id/attendAvatarImageView"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="My name is Uhum"
                style="@style/contentText"
                />

            <TextView
                android:id="@+id/attendRegisterDateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/attendMatricNumberTextView"
                app:layout_constraintStart_toEndOf="@id/attendAvatarImageView"
                tools:text="My name is Uhum"
                style="@style/smallContentText"
                />

            <ImageButton
                android:id="@+id/attendDeleteButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/sampah"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>