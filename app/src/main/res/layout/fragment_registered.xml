<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.RegisteredFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/light_gray"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            app:circularflow_radiusInDP="8dp"
            android:hint="@string/search_bar"
            android:contextClickable="true"
            app:iconifiedByDefault="false"
            style="@style/SearchViewStyle" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/faceListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cardview_searchbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/summarise"
        android:nestedScrollingEnabled="false"
        tools:itemCount="10"
        tools:listitem="@layout/layout_user" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/summarise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:src="@drawable/baseline_format_list_bulleted_24"
        android:backgroundTint="@color/blue"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/summarise"
        android:layout_margin="8dp"
        android:src="@drawable/ic_refresh"
        android:backgroundTint="@color/blue"/>
</androidx.constraintlayout.widget.ConstraintLayout>
