<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailActivity"
    android:background="@color/light_gray"
    android:backgroundTint="@color/light_gray">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_identity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"

            android:text="PROFILE"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/detail_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Rayhan Gibrani Uhum"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_image" />

        <TextView
            android:id="@+id/detail_matrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="A20EE318"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_name" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/detail_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            app:circularflow_radiusInDP="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_text"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            tools:src="@tools:sample/avatars"


            />

        <androidx.cardview.widget.CardView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/blue"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_matrics">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="Detail Attendace :"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/in_detailcardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:background="@color/light_gray"
            android:backgroundTint="@color/light_blue"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <TextView
                android:id="@+id/in_detailtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="clockin:"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/in_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/in_detailcardview"
            app:layout_constraintVertical_bias="0.045"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/detail_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ini jhasil dalam 5 feb"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/out_detailcardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:background="@color/light_gray"
            android:backgroundTint="@color/light_blue"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/in_attendance">

            <TextView
                android:id="@+id/out_detailtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="clockout:"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/out_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/out_detailcardview"
            app:layout_constraintVertical_bias="0.045"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/detail_outattendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ini jhasil dalam 9feb"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


